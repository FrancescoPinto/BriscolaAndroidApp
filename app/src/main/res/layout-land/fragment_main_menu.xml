<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a0000000"
    android:orientation="vertical"
    android:clickable="true">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.343"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:paddingBottom="16dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/resume_from_saved_text"
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_slot_shape"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/resume_from_saved"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/load_from_saved" />

            <TextView
                android:id="@+id/start_online_match_text"
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_slot_shape"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/start_online_match"
                app:layout_constraintTop_toBottomOf="@+id/start_online_match"
                app:layout_constraintRight_toLeftOf="@+id/resume_from_saved_text"
                android:layout_marginRight="24dp" />

            <TextView
                android:id="@+id/start_offline_match_text"
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/card_slot_shape"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/start_offline_match"
                app:layout_constraintTop_toBottomOf="@+id/start_offline_match"
                app:layout_constraintRight_toLeftOf="@+id/start_online_match_text"
                android:layout_marginRight="24dp" />

            <ImageButton
                android:id="@+id/load_from_saved"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/round_button"
                app:srcCompat="@drawable/ic_load_saved_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="25dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageButton
                android:id="@+id/start_online_match"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_play_online_black_48dp"
                app:layout_constraintRight_toLeftOf="@+id/load_from_saved" />

            <ImageButton
                android:id="@+id/start_offline_match"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_play_offline_black_48dp"
                app:layout_constraintRight_toLeftOf="@+id/start_online_match" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="187dp"
                android:layout_height="117dp"
                app:srcCompat="@drawable/briscola_logo"
                app:layout_constraintRight_toLeftOf="@+id/start_offline_match"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.538" />

            <ImageButton
                android:id="@+id/close_menu_button"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="49dp"
                android:background="@drawable/round_button"
                app:layout_constraintHorizontal_bias="0.015"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_close_black_24dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintVertical_bias="0.181" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>